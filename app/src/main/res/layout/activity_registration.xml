<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".RegistrationActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/reg_logo"
        android:src="@drawable/whitelogo"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/app_green"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint=" Name"
            android:textStyle="bold"
            android:drawableLeft="@drawable/name_icon"
            android:textSize="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint=" Email"
            android:textStyle="bold"
            android:drawableLeft="@drawable/email_icon"
            android:textSize="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_pass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint=" Create Password"
            android:textStyle="bold"
            android:drawableLeft="@drawable/password"
            android:textSize="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/Reg_checkbox_login"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        />
    <Button
        android:id="@+id/reg_registration_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/app_green"
        android:text="Registaration"
        android:textSize="20dp"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:text="---------    or continue with    ---------"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/reg_google"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/google"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="120dp"
            android:background="@color/white"
            />
        <ImageButton
            android:id="@+id/reg_facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            android:background="@color/white"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an Account? "
            android:textStyle="bold"
            android:textSize="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/Reg_Signin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/red"
            />

    </LinearLayout>
</LinearLayout>