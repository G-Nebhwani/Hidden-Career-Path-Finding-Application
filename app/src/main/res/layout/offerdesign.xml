<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    app:cardCornerRadius="20dp"
    android:background="@color/basic_green"
    android:layout_margin="7dp"
    android:elevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:elevation="3dp">

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Instructor's Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/offer_userimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/userimg"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"/>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >

            <!-- Course Title -->
            <TextView
                android:id="@+id/offer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume Making"
                android:textColor="@color/dark_Green"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/offer_discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume that gets you hired"
                android:textColor="@color/app_green"
                android:textSize="12sp"
                />

            <!-- Instructor Name -->
            <TextView
                android:id="@+id/offer_instructor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructor: Ravi Gupta"
                android:textColor="@color/app_green"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Discount label -->
        <TextView
            android:id="@+id/offer_percentage"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="50% off"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>

</LinearLayout>
        <!-- Price Section -->
        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_yellow_design">

            <!-- Original Price -->
            <TextView
                android:id="@+id/offer_orignal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 1500"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"/>

            <!-- Discounted Price -->
            <TextView
                android:id="@+id/offer_dicount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.750"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>