<!-- res/drawable/border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Background color (optional) -->
    <stroke
        android:width="1dp"
        android:color="@color/app_green" /> <!-- Border width and color -->
    <corners android:radius="100dp" /> <!-- Rounded corners (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" /> <!-- Padding inside the border (optional) -->
</shape>
