<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Elite" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/app_green</item>
        <item name="colorPrimaryDark">@color/app_green</item>
        <item name="colorAccent">@color/app_green</item> <!-- Accent color for widgets like FABs -->


    </style>
    <style name="NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_green</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Elite" parent="Base.Theme.Elite" />
    <style name="Theme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:statusBarColor">@color/basic_green</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/text_color</item>
        <item name="colorControlActivated">@color/app_green</item>
    </style>
</resources>